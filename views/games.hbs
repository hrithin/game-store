<section style="background-color: #eee;">
    <div class="text-center container py-5">
        <h4 class="mt-4 mb-5"><strong>All Games</strong></h4>

        <div class="row">

            {{#each games}}
            <div class="col-lg-4 col-md-12 mb-4" onclick="location.href='/games/info/{{_id}}';">
                <div class="card">
                    <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                        data-mdb-ripple-color="light">
                        <img src="/images/{{this.gimage}}"
                            style="height:271px; max-height: 336px; max-width:336px; width: 263px;" class="w-100" />
                        <a href="#!">
                            <div class="mask">
                                <div class="d-flex justify-content-start align-items-end h-100">
                                    <h5><span class="badge bg-primary ms-2"></span></h5>
                                </div>
                            </div>
                            <div class="hover-overlay">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </div>
                        </a>
                    </div>
                    <div class="card-body">
                        <a href="" class="text-reset">
                            <h5 class="card-title mb-3">{{this.gname}}</h5>
                        </a>
                        <a href="" class="text-reset">
                            <p>{{this.gcat}}</p>
                        </a>
                        <h6 class="mb-3">{{this.gprice}}</h6>
                    </div>
                </div>
            </div>
           
           {{/each}}

        </div>


    </div>
</section>